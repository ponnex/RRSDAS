{
  "rules": {
    ".read": false,
    ".write": false,
    "Modules": {
      ".read": "root.child('Users').child(auth.uid).val() != null",
      ".write": "root.child('Admin').child('uid').val() == auth.uid && root.child('Users').child(auth.uid).child('isAdmin').val() == true"
    },
    "Users": {
      ".read": "root.child('Users').child(auth.uid).val() != null",
      ".write": "root.child('Admin').child('uid').val() == auth.uid && root.child('Users').child(auth.uid).child('isAdmin').val() == true"
    }
  }
}
